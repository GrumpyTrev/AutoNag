<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="#ffffffff">
    <TextView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/NotDoneBackground"
        android:layout_alignTop="@+id/titleLine"
        android:layout_alignBottom="@+id/definition" />
    <RelativeLayout
        android:id="@+id/titleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/word_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Task 1"
            android:paddingTop="4dip"
            android:paddingLeft="4dip"
            android:textColor="#ff333333"
            android:textSize="18dp"
            android:textStyle="normal" />
        <ImageView
            android:id="@+id/taskDone"
            android:src="@android:drawable/checkbox_on_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/taskNotDone"
            android:src="@android:drawable/checkbox_off_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLine"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:fadingEdge="vertical"
        android:text="Memo 1"
        android:background="#0000"
        android:paddingLeft="4dip"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ff7f7f7f"
        android:textSize="12dp"
        android:textStyle="normal" />
</RelativeLayout>