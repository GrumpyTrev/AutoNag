<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:key="@string/settingsKey"
	android:persistent="false" >
    <Preference
        android:title="@string/helpSettingsTitle"
        android:summary="@string/helpSettingsSummary">
        <intent
        	android:targetPackage="AutoNag.AutoNag"
            android:targetClass="autonag.HelpDialogueActivity" />
    </Preference>
	<PreferenceCategory
		android:title="@string/widgetSpecificCategory" >
	    <ListPreference
	    	android:key="@string/listSettingsKey"
	        android:title="@string/listSettingsTitle"
	        android:summary="@string/listSettingsSummary">
		</ListPreference>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/listManagementCategory" >
		<PreferenceScreen
			android:key="@string/renameScreenKey"
	        android:title="@string/renameScreenTitle"
			android:persistent="false" >
		</PreferenceScreen>
		<EditTextPreference
			android:key="@string/createListKey"
	        android:title="@string/createListTitle"
	        android:dialogTitle="@string/createListDialogTitle" >
		</EditTextPreference>
		<ListPreference
			android:key="@string/deleteListKey"
	        android:title="@string/deleteListTitle" >
		</ListPreference>
	</PreferenceCategory>
</PreferenceScreen>