<?xml version="1.0" encoding="UTF-8" ?>
<!-- 
Background of green items that are not done
Choose between the Pressed drawable, or draw the item with a green background
 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item 
		android:state_pressed="true" 
	    android:drawable="@drawable/Pressed" />
	<item  
		android:state_focused="false" >
	    <layer-list>
			<item android:drawable="@drawable/ItemLeftBorder" />
			<item android:left="4dp" >
				<shape android:shape="rectangle" > 
					<solid android:color="@color/itemPinkBackground"/>    
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
